<!-- hdfs-site.xml: Configures HDFS settings, like replication factor and block size.xml -->

<configuration>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    <property>
        <name>dfs.blocksize</name>
        <value>268435456</value> <!-- This is 256 MB -->
    </property>
</configuration>


<!-- dfs.replication: Sets the default block replication for HDFS to 1, which is appropriate for a 
single-node setup.
dfs.blocksize: Sets the block size to 256 MB, which can affect performance and storage efficiency 
depending on your workload. -->